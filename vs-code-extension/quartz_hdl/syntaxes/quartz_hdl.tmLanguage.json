{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Quartz",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#literals"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.type.quartz-hdl",
					"match": "\\b(bit|bits|as|rising|falling|const)\\b"
				},
				{
					"match": "\\b(enum|mod)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
					"captures": {
						"1": {
							"name": "keyword.type.quartz-hdl"
						},
						"2": {
						  "name": "entity.name.type.quartz-hdl"
						}
					}
				},
				{
					"begin": "\\b(struct)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
					"beginCaptures": {
						"1": {
							"name": "keyword.type.quartz-hdl"
						},
						"2": {
						  "name": "entity.name.type.quartz-hdl"
						}
					},
					"patterns": [
						{
							"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*:\\s*(\\[\\s*)*(?!((bit|bits)\\b))([a-zA-Z_][a-zA-Z0-9_]*)\\b",
							"captures": {
								"5": {
									"name": "entity.name.type.quartz-hdl"
								}
							}
						},
						{
							"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*:\\s*(\\[\\s*)*(bit|bits)\\b",
							"captures": {
								"3": {
									"name": "keyword.type.quartz-hdl"
								}
							}
						}
					],
					"end": "}"
				},
				{
					"match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
					"captures": {
						"1": {
							"name": "keyword.type.quartz-hdl"
						},
						"2": {
						  "name": "entity.name.function.quartz-hdl"
						}
					}
				},
				{
					"name": "keyword.control.quartz-hdl",
					"match": "\\b(if|else|match|while|for|proc|comb)\\b"
				},
				{
					"match": "\\b(in|out|inout)\\s+(sig|reg)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*:\\s*(\\[\\s*)*(?!((bit|bits)\\b))([a-zA-Z_][a-zA-Z0-9_]*)\\b",
					"captures": {
						"1": {
							"name": "keyword.type.quartz-hdl"
						},
						"2": {
							"name": "keyword.type.quartz-hdl"
						},
						"7": {
							"name": "entity.name.type.quartz-hdl"
						}
					}
				},
				{
					"match": "\\b(sig|reg|let)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*:\\s*(\\[\\s*)*(?!((bit|bits)\\b))([a-zA-Z_][a-zA-Z0-9_]*)\\b",
					"captures": {
						"1": {
							"name": "keyword.type.quartz-hdl"
						},
						"6": {
							"name": "entity.name.type.quartz-hdl"
						}
					}
				},
				{
					"match": "\\b(in|out|inout)\\s+(sig|reg)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*:\\s*(\\[\\s*)*(bit|bits)\\b",
					"captures": {
						"1": {
							"name": "keyword.type.quartz-hdl"
						},
						"2": {
							"name": "keyword.type.quartz-hdl"
						},
						"5": {
							"name": "keyword.type.quartz-hdl"
						}
					}
				},
				{
					"match": "\\b(sig|reg|let)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*:\\s*(\\[\\s*)*(bit|bits)\\b",
					"captures": {
						"1": {
							"name": "keyword.type.quartz-hdl"
						},
						"4": {
							"name": "keyword.type.quartz-hdl"
						}
					}
				},
				{
					"match": "\\b(?!((bit|bits)\\b))([a-zA-Z_][a-zA-Z0-9_]*)\\b\\s*::",
					"captures": {
						"3": {
							"name": "entity.name.type.quartz-hdl"
						}
					}
				},
				{
					"match": "\\b(?!((rising|falling)\\b))([a-zA-Z_][a-zA-Z0-9_]*)\\b\\s*\\(",
					"captures": {
						"1": {
							"name": "entity.name.function.quartz-hdl"
						}
					}
				}
			]
		},
		"literals": {
			"patterns": [
				{
					"name": "constant.numeric.quartz-hdl",
					"match": "\\b(([0-9][_0-9]*)|(0[xX][0-9a-fA-F][_0-9a-fA-F]*)|(0[bB][01][_01]*))\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.quartz-hdl",
					"match": "//.*$"
				},
				{
					"name": "comment.block.quartz-hdl",
					"match": "/\\*.*\\*/"
				}
			]
		}
	},
	"scopeName": "source.quartz-hdl"
}